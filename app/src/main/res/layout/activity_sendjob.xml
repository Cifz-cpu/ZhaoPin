<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.lxy.zhaopin.myview.TopBarView
        android:id="@+id/mine_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.lxy.zhaopin.myview.TopBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作名称"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:hint="请输入工作名称"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位简介"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_jianjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:hint="请输入职位简介"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需求人数"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:hint="请输入需求人数"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低工资"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:hint="请输入最低工资"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高工资"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:hint="请输入最高工资"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位详情"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_detail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/smssdk_black"
            android:textSize="16sp"
            android:maxLines="5"
            android:gravity="top"
            android:layout_gravity="center_vertical"
            android:hint="请输入职位详情"
            android:background="@null"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="保存"/>

</LinearLayout>